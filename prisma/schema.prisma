generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WebhookEvent {
  id           String    @id @default(cuid())
  eventId      String    @unique
  entityType   String
  action       String
  businessIds  String[]
  createdDate  DateTime
  receivedAt   DateTime  @default(now())

  rawBody      String
  headers      Json
  payload      Json
  sourceIp     String?
  userAgent    String?

  // Derived fields
  cash_collected Float?   // added for cashout calculations
  day            DateTime @default(now()) @db.Date

  @@index([entityType, action])
  @@index([day])
}

model CashoutCounted {
  id        Int      @id @default(autoincrement())
  day       DateTime @unique @db.Date
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProviderPercentage {
  providerId        String  @id
  servicePercentage Float?
  tipFeePercentage  Float?
  specialDeduction  Float?
  specialAddition   Float?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ProviderWeekConfig {
  providerId        String
  weekStart         DateTime @db.Date
  servicePercentage Float?
  tipFeePercentage  Float?
  specialDeduction  Float?
  specialAddition   Float?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@id([providerId, weekStart])
  @@index([weekStart])
}
